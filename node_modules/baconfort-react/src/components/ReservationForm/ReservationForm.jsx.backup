                setReservationTotal(null);
                setFormData({
                  checkIn: '',
                  checkOut: '',
                  guests: '1',
                  fullName: user?.name || '',
                  email: user?.email || '',
                  phone: user?.phone || '',
                  dni: '',
                  message: `Hola, me interesa reservar ${apartmentName}. ¬øEst√° disponible para las fechas indicadas? Por favor contactarme a mi email o tel√©fono. Saludos.`
                });
              }}
            >
